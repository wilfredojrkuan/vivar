<script type="text/javascript">
    function motFunc(motVal) {
          var radiobtns = document.getElementsByName('atcBundleName');
      
          var el0 = document.getElementById('discountBadge0');
          var el1 = document.getElementById('discountBadge1');
          var el2 = document.getElementById('discountBadge2');
          var el3 = document.getElementById('discountBadge3');
      
          var price0 = document.getElementById('variantPrice0');
          var price1 = document.getElementById('variantPrice1');
          var price2 = document.getElementById('variantPrice2');
          var price3 = document.getElementById('variantPrice3');
      
          if (el0) { el0.classList.remove('discountBadgeActive') };
          if (el1) { el1.classList.remove('discountBadgeActive') };
          if (el2) { el2.classList.remove('discountBadgeActive') };
          if (el3) { el3.classList.remove('discountBadgeActive') };
      
          if (price0) { price0.classList.remove('discountPriceActive') };
          if (price1) { price1.classList.remove('discountPriceActive') };
          if (price2) { price2.classList.remove('discountPriceActive') };
          if (price3) { price3.classList.remove('discountPriceActive') };
      
          if (radiobtns) {
            radiobtns.forEach((item) => {
                if (item) {
                  item.checked = false;
                  item.disabled = false;
      
                  if (motVal == 1 && item.id == 'radio1') {
                    item.checked = true;
                    item.disabled = true;
      
                    if (el0) { el0.classList.add('discountBadgeActive') };
                    if (price0) { price0.classList.add('discountPriceActive') };
                  } else if (motVal == 2 && item.id == 'radio2') {
                    item.checked = true;
                    item.disabled = true;
      
                    if (el1) { el1.classList.add('discountBadgeActive') };
                    if (price1) { price1.classList.add('discountPriceActive') };
                  } else if (motVal == 3 && item.id == 'radio3') {
                    item.checked = true;
                    item.disabled = true;
      
                    if (el2) { el2.classList.add('discountBadgeActive') };              
                    if (price2) { price2.classList.add('discountPriceActive') };
                  } else if (motVal == 4 && item.id == 'radio4') {
                    item.checked = true;
                    item.disabled = true;
      
                    if (el3) { el3.classList.add('discountBadgeActive') };
                    if (price3) { price3.classList.add('discountPriceActive') };
                  } else if (motVal > 4 && item.id == 'radio4') {
                    if (el3) { el3.classList.add('discountBadgeActive') };
                  }
                }
            });
          }
      }
    
  
      function atcBundle(radiobtn, i) {
          var radiobtns = document.getElementsByName('atcBundleName');
      
          var el1 = document.getElementById('discountBadge1');
          var el2 = document.getElementById('discountBadge2');
          var el3 = document.getElementById('discountBadge3');
      
          var price0 = document.getElementById('variantPrice0');
          var price1 = document.getElementById('variantPrice1');
          var price2 = document.getElementById('variantPrice2');
          var price3 = document.getElementById('variantPrice3');
      
          if (el1) { el1.classList.remove('discountBadgeActive') };
          if (el2) { el2.classList.remove('discountBadgeActive') };
          if (el3) { el3.classList.remove('discountBadgeActive') };
      
          if (price0) { price0.classList.remove('discountPriceActive') };
          if (price1) { price1.classList.remove('discountPriceActive') };
          if (price2) { price2.classList.remove('discountPriceActive') };
          if (price3) { price3.classList.remove('discountPriceActive') };          
      
          if (radiobtns) {
            radiobtns.forEach((item) => {
              if (item) {
                if (item !== radiobtn) {
                  item.disabled = false;
                } else {
                  item.disabled = true;
                }
              }
            });
      
            if (radiobtn.id == 'radio1') {
              if (price0) { price0.classList.add('discountPriceActive') };
            } else if (radiobtn.id == 'radio2') {
              if (el1) { el1.classList.add('discountBadgeActive') };
              if (price1) { price1.classList.add('discountPriceActive') };
            } else if (radiobtn.id == 'radio3') {
              if (el2) { el2.classList.add('discountBadgeActive') };
              if (price2) { price2.classList.add('discountPriceActive') };
            } else if (radiobtn.id == 'radio4') {
              if (el3) { el3.classList.add('discountBadgeActive') };
              if (price3) { price3.classList.add('discountPriceActive') };
            }
          }
    
          var QuantityInput = document.getElementById('Quantity-{{ qtyId }}');
      
          if (QuantityInput) {
            QuantityInput.value = i;
          }
    
          var motQuantityInput = document.getElementById('motQuantity-{{ qtyId }}');
      
          if (motQuantityInput) {
            motQuantityInput.value = i;
          }
      }
</script>